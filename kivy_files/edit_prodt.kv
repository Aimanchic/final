<EditProductScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: 40
        spacing: 20

        Label:
            text: "Редактировать продукт"
            font_size: 24

        TextInput:
            id: name_input
            hint_text: "Название"
            font_size: 24
            size_hint_y: None
            height: 70

        TextInput:
            id: category_input
            hint_text: "Категория"
            font_size: 24
            size_hint_y: None
            height: 70

        TextInput:
            id: quantity_input
            hint_text: "Количество"
            input_filter: 'int'
            font_size: 24
            size_hint_y: None
            height: 70

        TextInput:
            id: price_input
            hint_text: "Цена"
            input_filter: 'float'
            font_size: 24
            size_hint_y: None
            height: 70

        Button:
            text: "Сохранить изменения"
            size_hint_y: None
            height: 70
            on_release: root.save_changes()

        Button:
            text: "Удалить продукт"
            size_hint_y: None
            height: 70
            on_release: root.delete_product()

        Button:
            text: "Назад"
            size_hint_y: None
            height: 70
            on_release: root.manager.current = "products"

<ProductScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: 20
        spacing: 20

        BoxLayout:
            orientation: "horizontal"
            spacing: 40
            size_hint_y: None
            height: 60

            BoxLayout:
                orientation: "vertical"
                spacing: 5
                Label:
                    text: "Поиск продуктов"
                    size_hint_y: None
                    height: 20
                    font_size: 16
                TextInput:
                    id: product_search
                    multiline: False
                    font_size: 16
                    size_hint: 1, None
                    height: 40
                    on_text: root.filter_products(self.text)

            BoxLayout:
                orientation: "vertical"
                spacing: 5
                Label:
                    text: "Поиск товаров"
                    size_hint_y: None
                    height: 20
                    font_size: 16
                TextInput:
                    id: item_search
                    multiline: False
                    font_size: 16
                    size_hint: 1, None
                    height: 40
                    on_text: root.filter_items(self.text)

        GridLayout:
            cols: 2
            spacing: 40
            size_hint_y: 0.7

            BoxLayout:
                orientation: "vertical"
                Label:
                    text: "Продукты"
                    size_hint_y: None
                    height: 30
                    font_size: 18
                BoxLayout:
                    size_hint_y: None
                    height: 30
                    spacing: 10
                    Label:
                        text: "Название"
                        font_size: 16
                    Label:
                        text: "Категория"
                        font_size: 16
                    Label:
                        text: "Кол-во"
                        font_size: 16
                    Label:
                        text: "Цена"
                        font_size: 16
                    Label:
                        text: ""
                        size_hint_x: None
                        width: 180
                ScrollView:
                    BoxLayout:
                        id: products_box
                        orientation: "vertical"
                        size_hint_y: None
                        height: self.minimum_height
                        spacing: 10
                        padding: 5

            BoxLayout:
                orientation: "vertical"
                Label:
                    text: "Товары для продажи"
                    size_hint_y: None
                    height: 30
                    font_size: 18
                BoxLayout:
                    size_hint_y: None
                    height: 30
                    spacing: 10
                    Label:
                        text: "Название"
                        font_size: 16
                    Label:
                        text: "Кол-во"
                        font_size: 16
                    Label:
                        text: "Цена"
                        font_size: 16
                ScrollView:
                    BoxLayout:
                        id: items_box
                        orientation: "vertical"
                        size_hint_y: None
                        height: self.minimum_height
                        spacing: 10
                        padding: 5

        Button:
            text: "Добавить продукт"
            size_hint_y: None
            height: 70
            font_size: 24
            on_release:
                root.manager.current = "add_product"

        Button:
            text: "Добавить товар"
            size_hint_y: None
            height: 70
            font_size: 24
            on_release:
                root.manager.current = "add_item"

        Button:
            id: manage_users_btn
            text: "Управление сотрудниками"
            size_hint_y: None
            height: 70
            font_size: 24
            on_release:
                root.manager.current = "manage_users"

        Button:
            text: "Выйти"
            size_hint_y: None
            height: 70
            font_size: 24
            on_release:
                app.user_role = None
                root.manager.current = "login"
